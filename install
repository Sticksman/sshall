#!/bin/bash

which itermocil &> /dev/null
if [ $? -ne 0 ];
then
	echo "Installing itermocil using brew"
	brew update
	brew install TomAnthony/brews/itermocil
	mkdir ~/.itermocil
fi

PWD=`pwd`
mv $PWD/sshall /usr/local/bin/sshall
mv $PWD/ec2sshpanes /usr/local/bin/ec2sshpanes
chmod +x /usr/local/bin/sshall

rm -- "$0"

